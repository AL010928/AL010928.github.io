{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "config": {
    "font": "Circular Std",
    "background": "#f7f7f7",
    "text": {
      "color": "#676A86",
      "align": "left",
      "baseline": "middle",
      "dx": 7,
      "dy": 0,
      "fontSize": 11
    },
    "view": {
      "stroke": null,
      "continuousWidth": 400,
      "continuousHeight": 300,
      "discreteWidth": 400,
      "discreteHeight": 300
    },
    "range": {
      "category": [
        "#36B7B4",
        "#E6224B",
        "#F4C245",
        "#0063AF",
        "#00A767",
        "#179FDB",
        "#EB5C2E"
      ],
      "diverging": ["#E6224B", "#E54753", "#C9C9C9", "#179FDB", "#122B39"],
      "heatmap": ["#C9C9C9", "#179FDB", "#0063AF", "#122B39"],
      "ordinal": ["#00A767", "#36B7B4", "#179FDB", "#0063AF", "#243B5A"]
    },
    "bar": { "color": "#179fdb" },
    "line": { "color": "#e6224b" },
    "rule": { "color": "#676A86" },
    "area": { "opacity": 0.3 },
    "point": { "filled": true, "size": 80, "color": "#e6224b", "opacity": 0.95 },
    "geoshape": { "stroke": "white", "strokeWidth": 0.3 },
    "rect": { "fill": "#d6d4d4", "opacity": 0.3 },
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Circular Std",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "title": null,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4
    },
    "axisXDiscrete": {
      "grid": false,
      "labelAngle": 0,
      "tickCount": 10,
      "tickOpacity": 0.5,
      "title": null
    },
    "axisYDiscrete": { "ticks": false, "labelPadding": 5 },
    "axisXTemporal": { "grid": false, "ticks": true },
    "axisXQuantitative": { "grid": true },
    "axisYQuantitative": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false,
      "labelPadding": 5,
      "tickCount": 8,
      "titleAngle": 0,
      "titleAlign": "left",
      "titleBaseline": "bottom",
      "titleX": 0,
      "titleY": -5
    },
    "title": {
      "color": "#676A86E6",
      "subtitleColor": "#676A86",
      "font": "Circular Std",
      "subtitleFont": "Circular Std",
      "anchor": "start",
      "fontSize": 14,
      "subtitleFontSize": 12,
      "subtitlePadding": 4,
      "offset": 0,
      "frame": "group"
    },
    "legend": {
      "titleColor": "#122b39",
      "title": null,
      "labelColor": "#122b39",
      "labelFontSize": 11
    }
  },

  "data": {
    "url": "https://api.worldbank.org/v2/country/JPN;EAS;OED/indicator/SP.ADO.TFRT?format=json&per_page=2000",
    "format": { "type": "json", "property": "1" }
  },

  "transform": [
    { "filter": "datum.value != null" },
    { "calculate": "datum.country.value", "as": "region" },
    { "calculate": "toDate(datum.date + '-01-01')", "as": "year" },
    { "filter": "toNumber(datum.date) >= 1990 && toNumber(datum.date) <= 2024" }
  ],

  "layer": [
    {
      "mark": {
        "type": "point",
        "align": "left",
        "dx": 0,
        "dy": 0,
        "filled": true,
        "size": 40
      },
      "encoding": {
        "color": { "field": "region", "type": "nominal" },
        "x": { "aggregate": "max", "field": "year", "type": "temporal" },
        "y": {
          "aggregate": { "argmax": "year" },
          "field": "value",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": { "type": "line", "strokeWidth": 2 },
      "encoding": {
        "color": {
          "field": "region",
          "legend": null,
          "title": "",
          "type": "nominal"
        },
        "tooltip": [
          { "field": "region", "title": "Region", "type": "nominal" },
          {
            "field": "value",
            "format": ",.2f",
            "title": "Value",
            "type": "quantitative"
          },
          {
            "field": "year",
            "timeUnit": "year",
            "title": "Year",
            "type": "temporal"
          }
        ],
        "x": {
          "axis": { "gridOpacity": 0, "labelAlign": "left", "labelFontSize": 13 },
          "field": "year",
          "title": "",
          "type": "temporal"
        },
        "y": {
          "axis": {
            "labelFontSize": 13
          },
          "field": "value",
          "title": "",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -4,
        "size": 13
      },
      "encoding": {
        "color": { "field": "region", "type": "nominal" },
        "text": { "field": "region", "type": "nominal" },
        "x": { "aggregate": "max", "field": "year", "type": "temporal" },
        "y": {
          "aggregate": { "argmax": "year" },
          "field": "value",
          "type": "quantitative"
        }
      }
    }
  ],

  "height": 350,
  "width": "container",
  "autosize": { "type": "fit", "contains": "padding", "resize": false }
}
